<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_FF000000"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp">

        <Button
            android:id="@+id/qrcode_footer_photo"
            android:layout_width="65dp"
            android:layout_height="67dp"
            android:layout_centerVertical="true"
            android:background="@drawable/qrcode_footer_photo"/>

        <TextView
            style="@style/QRCodeFooterText"
            android:layout_below="@id/qrcode_footer_photo"
            android:text="@string/module_qrcode_album"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/qrcode_footer_flash"
            android:layout_width="65dp"
            android:layout_height="67dp"
            android:layout_centerInParent="true"
            android:background="@drawable/qrcode_footer_flash"/>

        <TextView
            style="@style/QRCodeFooterText"
            android:layout_below="@id/qrcode_footer_flash"
            android:text="@string/module_qrcode_flash"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/qrcode_footer_qrcode"
            android:layout_width="65dp"
            android:layout_height="67dp"
            android:layout_centerVertical="true"
            android:background="@drawable/qrcode_footer_qrcode"/>

        <TextView
            style="@style/QRCodeFooterText"
            android:layout_below="@id/qrcode_footer_qrcode"
            android:text="@string/module_qrcode"/>

    </RelativeLayout>

</RelativeLayout>