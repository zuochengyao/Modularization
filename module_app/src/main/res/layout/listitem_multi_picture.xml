<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?theme_app_list_item_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_logo_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/user_avatar_default"/>

    <TextView
        android:id="@+id/item_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_logo_view"
        android:layout_toRightOf="@id/item_logo_view"
        android:text="微微一笑很优酷"
        android:textColor="?theme_app_list_item_title_text_color"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_price_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/item_title_view"
        android:layout_marginRight="15dp"
        android:text="$123"
        android:textColor="?theme_app_list_item_price_text_color"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/item_info_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_logo_view"
        android:layout_toRightOf="@id/item_logo_view"
        android:text="@string/module_app_video"
        android:textColor="?theme_app_list_item_video_info_text_color"
        android:textSize="16sp"/>

    <HorizontalScrollView
        android:id="@+id/item_product_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/item_logo_view"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/product_photo_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/item_footer_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_product_layout"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:lines="2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="杨洋郑爽“聊”破次元盛,甜蜜演绎《微微一笑很优酷》优酷独家热播中"
        android:textColor="?theme_app_list_item_footer_text_color"
        android:textSize="16sp"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/item_footer_view"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/gray_D0D0D0"/>

    <TextView
        android:id="@+id/item_from_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:text="来自北京"
        android:textColor="?theme_app_list_item_from_text_color"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/item_like_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/divider"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:text="来自北京"
        android:textColor="?theme_app_list_item_like_text_color"
        android:textSize="15sp"/>
</RelativeLayout>

