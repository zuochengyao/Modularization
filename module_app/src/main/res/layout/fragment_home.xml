<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?theme_app_fragment_home_header_background"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:src="?theme_app_fragment_home_header_menu_icon"/>

        <TextView
            android:id="@+id/text_search"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="?theme_app_fragment_home_header_search_background"
            android:gravity="center"
            android:hint="@string/module_app_search_hint"/>

        <ImageView
            android:id="@+id/image_scan_qrcode"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="?theme_app_fragment_home_header_qrcode_icon"/>

    </LinearLayout>
    
    <ImageView
        android:id="@+id/image_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/anim_data_loading"/>

    <ListView
        android:id="@+id/list_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alwaysDrawnWithCache="false"
        android:divider="?theme_app_list_item_divider"
        android:dividerHeight="10dp"
        android:visibility="gone"/>

</LinearLayout>